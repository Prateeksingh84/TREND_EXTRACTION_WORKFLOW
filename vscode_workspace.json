{
    "folders": [
        {
            "path": "."
        }
    ],
    "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "autopep8",
        "python.linting.pylintArgs": [
            "--disable=C0111,C0103,W0703,R0913,R0914,R0915"
        ],
        "files.exclude": {
            "**/__pycache__": true,
            "**/*.pyc": true,
            "**/.pytest_cache": true,
            "**/.DS_Store": true,
            "**/venv": true,
            "**/.env": true
        },
        "files.watcherExclude": {
            "**/.git/objects/**": true,
            "**/.git/subtree-cache/**": true,
            "**/node_modules/*/**": true,
            "**/.hg/store/**": true,
            "**/venv/**": true
        },
        "editor.formatOnSave": true,
        "editor.rulers": [
            80,
            120
        ],
        "python.analysis.typeCheckingMode": "basic",
        "python.terminal.activateEnvironment": true,
        "[python]": {
            "editor.tabSize": 4,
            "editor.insertSpaces": true,
            "editor.formatOnSave": true,
            "editor.codeActionsOnSave": {
                "source.organizeImports": "explicit"
            }
        },
        "files.associations": {
            "*.env.example": "dotenv",
            ".env": "dotenv"
        }
    },
    "launch": {
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Python: Main Script",
                "type": "debugpy",
                "request": "launch",
                "program": "${workspaceFolder}/main.py",
                "console": "integratedTerminal",
                "justMyCode": true,
                "env": {
                    "PYTHONUNBUFFERED": "1"
                }
            },
            {
                "name": "Python: Setup Script",
                "type": "debugpy",
                "request": "launch",
                "program": "${workspaceFolder}/setup.py",
                "console": "integratedTerminal"
            },
            {
                "name": "Python: Current File",
                "type": "debugpy",
                "request": "launch",
                "program": "${file}",
                "console": "integratedTerminal"
            }
        ]
    },
    "tasks": {
        "version": "2.0.0",
        "tasks": [
            {
                "label": "Install Dependencies",
                "type": "shell",
                "command": "pip install -r requirements.txt",
                "problemMatcher": [],
                "group": {
                    "kind": "build",
                    "isDefault": false
                }
            },
            {
                "label": "Run Setup",
                "type": "shell",
                "command": "python setup.py",
                "problemMatcher": [],
                "group": {
                    "kind": "build",
                    "isDefault": false
                }
            },
            {
                "label": "Run Trend Extraction",
                "type": "shell",
                "command": "python main.py",
                "problemMatcher": [],
                "group": {
                    "kind": "build",
                    "isDefault": true
                }
            },
            {
                "label": "Clean Generated Files",
                "type": "shell",
                "command": "rm -rf reports/* charts/* trends_database.db",
                "windows": {
                    "command": "del /q reports\\* charts\\* trends_database.db"
                },
                "problemMatcher": []
            }
        ]
    },
    "extensions": {
        "recommendations": [
            "ms-python.python",
            "ms-python.vscode-pylance",
            "ms-python.debugpy",
            "visualstudioexptteam.vscodeintellicode",
            "njpwerner.autodocstring",
            "donjayamanne.python-environment-manager",
            "kevinrose.vsc-python-indent"
        ]
    }
}